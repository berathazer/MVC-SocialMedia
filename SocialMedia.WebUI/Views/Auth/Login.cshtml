@{
    Layout = "_Layout";
    ViewData["HideNavbar"] = true;
    ViewData["HideFooter"] = true;
}

<section
    class="background-radial-gradient overflow-hidden h-full d-flex   min-vh-100 align-items-center justify-content-center">
    <style>
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%,
                    hsl(218, 41%, 35%) 15%,
                    hsl(218, 41%, 30%) 35%,
                    hsl(218, 41%, 20%) 75%,
                    hsl(218, 41%, 19%) 80%,
                    transparent 100%),
                radial-gradient(1250px circle at 100% 100%,
                    hsl(218, 41%, 45%) 15%,
                    hsl(218, 41%, 30%) 35%,
                    hsl(218, 41%, 20%) 75%,
                    hsl(218, 41%, 19%) 80%,
                    transparent 100%);
        }

        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: auto;
            bottom: -60px;
            /* Sol alt köşe */
            left: -130px;
            background: radial-gradient(#0058a8, #74a9ff);
            /* Maviye yakın renk tonu */
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: auto;
            top: -60px;
            /* Sağ üst köşe */
            right: -110px;
            width: 300px;
            height: 300px;
            background: radial-gradient(#0058a8, #74a9ff);
            /* Maviye yakın renk tonu */
            overflow: hidden;
        }

        .bg-glass {
            background: rgba(255, 255, 255, 0.1);
            /* Şeffaf beyaz arka plan */
            backdrop-filter: blur(25px);
            /* Blur efekti */
        }
    </style>

    <div class="container px-4  px-md-5 text-center text-lg-start">

        <div class="row gx-lg-5 align-items-center  ">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                    The best offer <br />
                    <span style="color: hsl(218, 81%, 75%)">for your business</span>
                </h1>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                    Lorem ipsum dolor, sit amet consectetur adipisicing elit.
                    Temporibus, expedita iusto veniam atque, magni tempora mollitia
                    dolorum consequatur nulla, neque debitis eos reprehenderit quasi
                    ab ipsum nisi dolorem modi. Quos?
                </p>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                <div class="card bg-glass">
                    <div class="card-body px-4 py-5 px-md-5">
                        <form action="/Auth/LoginUser" method="post">
                            <!-- Username input -->
                            <div class="form-outline mb-4">
                                <label class="form-label text-white" for="form3Example3">Kullanıcı Adı veya Email</label>
                                <input  type="text" id="form3Example3" class="form-control" />
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <label class="form-label text-white" for="form3Example4">Şifre</label>
                                <input type="password" id="form3Example4" class="form-control" />
                            </div>



                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4 w-100">
                                Giriş Yap
                            </button>

                            <!-- Register buttons -->
                            <div class="text-center">
                                <p class="text-white">Hesabınız yoksa <a href="/auth/register" class="text-white">Hesap
                                        Oluştur.</a></p>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
